{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    // Module system for Node ESM
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],

    // Interop & strictness
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleDetection": "force",
    "verbatimModuleSyntax": true,

    // Source maps
    "sourceMap": true,

    // Optional niceties
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src"]
}
